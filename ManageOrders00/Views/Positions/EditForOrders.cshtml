@model IEnumerable<ManageOrders00.Models.Position>

@{
    ViewData["Title"] = "EditForOrders";
}

<h1>Створення замовлення</h1>

<p>
    <a asp-action="Create">Севорити</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PositionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PositionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PositionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
