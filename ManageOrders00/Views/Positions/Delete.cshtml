@model ManageOrders00.Models.Position

@{
    ViewData["Title"] = "Видалення";
}

<h1>Видалення</h1>

<h3 style="color:red">Ви впевнені, що хочете видалити дану позицію?</h3>
<div>
    <h4>Позиція</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCount)
        </dd>
        <dt style="display:none" class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd style="display:none" class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PositionId" />
        <input type="submit" value="Підтвердити" class="btn btn-danger" /> |
        <a asp-controller="Orders" asp-action="Details" asp-route-id="@ViewBag.OrderId.orderId">Повернутися в "Деталі замовлення"</a>
    </form>
</div>
